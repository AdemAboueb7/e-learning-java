      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.elearning.controllers.PageAccueilController"
      stylesheets="/styles/accueil.css"
      styleClass="accueil-root">

    <Label text="Bienvenue sur Alpha-Education" styleClass="accueil-title"/>

    <Button fx:id="btnAdmin" onAction="#handleAdmin" text="👨‍💼 Espace Admin" styleClass="admin-button"/>

    <Button fx:id="btnUser" onAction="#handleUser" text="👨‍🎓 Espace Utilisateur" styleClass="user-button"/>

</VBox>
