<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="149.0" prefWidth="204.0" spacing="10" style="-fx-background-color: #7dc17d;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.elearning.controllers.ModifierSuggestionController">

    <Label style="-fx-background-color: #7dc17d;" styleClass="label" text="Modifier la Suggestion" textFill="#f4f7f4" />
    <TextField fx:id="contenuField" promptText="Contenu de la suggestion" />
    <CheckBox fx:id="correcteCheck" text="Est correcte ?" />
    <Label fx:id="errorLabel" styleClass="label error" />

    <HBox spacing="10">
        <Button onAction="#handleModifier" prefHeight="26.0" prefWidth="98.0" style="-fx-background-color: #cf08a7;" text="✔ Modifier" textFill="#fffefe" />
        <Button onAction="#handleRetour" prefHeight="26.0" prefWidth="94.0" style="-fx-background-color: #6135a4;" text="↩ Retour" textFill="#f5f3f7" />
    </HBox>
</VBox>
