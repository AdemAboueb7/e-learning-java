                <TableView fx:id="moduleTable" layoutX="14.0" layoutY="160.0" prefWidth="500.0" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="colNom" text="Nom" prefWidth="250.0"/>
                        <TableColumn fx:id="colDescription" text="Description" prefWidth="250.0"/>
                    </columns>
                </TableView>

                <Button layoutX="14.0" layoutY="380.0" text="Ajouter" onAction="#addModule"/>
                <Button layoutX="94.0" layoutY="380.0" text="Mettre Ã  jour" onAction="#updateModule"/>
                <Button layoutX="174.0" layoutY="380.0" text="Supprimer" onAction="#deleteModule"/>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
