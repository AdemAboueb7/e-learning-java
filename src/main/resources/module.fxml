    <left>
        <fx:include source="sidebar.fxml" />
    </left>
    <center>

        <AnchorPane prefWidth="600.0" prefHeight="400.0">
            <children>

                <TextField fx:id="moduleNameField" layoutX="14.0" layoutY="14.0" prefWidth="300.0" promptText="Nom du module"/>
