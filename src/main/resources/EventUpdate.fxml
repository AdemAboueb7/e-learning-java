<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="611.0" prefWidth="823.0"
            style="-fx-background-color: white; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 60; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0.3, 0, 4);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.EventUpdateController">

    <children>
        <Label layoutX="60.0" layoutY="74.0" text="Update Event" style="-fx-text-fill: black;">
            <font><Font name="SansSerif Regular" size="12.0"/></font>
        </Label>

        <Label layoutX="78.0" layoutY="122.0" text="Titre" style="-fx-text-fill: #af7258;">
            <font><Font name="SansSerif Regular" size="12.0"/></font>
        </Label>

        <Label layoutX="88.0" layoutY="303.0" text="Description" style="-fx-text-fill: #af7258;"/>

        <Label layoutX="93.0" layoutY="458.0" text="Prix" style="-fx-text-fill: #af7258;"/>

        <Label layoutX="143.0" layoutY="208.0" text="Type" style="-fx-text-fill: #af7258;"/>

        <Label fx:id="imgadd" layoutX="411.0" layoutY="352.0" text="Image path" style="-fx-text-fill: #af7258;"/>

        <TextField fx:id="eventtitletf" layoutX="75.0" layoutY="164.0" prefWidth="622.0"/>

        <TextField fx:id="eventdescriptiontf" layoutX="84.0" layoutY="326.0" prefHeight="84.0" prefWidth="302.0"/>

        <TextField fx:id="eventpricetf" layoutX="131.0" layoutY="449.0"/>

        <DatePicker fx:id="datepicker1" layoutX="282.0" layoutY="237.0" prefWidth="159.0"/>

        <DatePicker fx:id="datepicker2" layoutX="493.0" layoutY="237.0" prefWidth="159.0"/>

        <ComboBox fx:id="combo" layoutX="88.0" layoutY="246.0" prefWidth="150.0" promptText="choisir un type"/>

        <Button layoutX="466.0" layoutY="503.0" text="Mettre à jour" onAction="#updateevent"
                style="-fx-background-color: #245c52; -fx-text-fill: white;"/>

        <Button layoutX="700" layoutY="503.0" text="Retour à la liste" onAction="#vieweventlist"
                style="-fx-background-color: #245c52; -fx-text-fill: white;"/>

        <Button layoutX="412.0" layoutY="376.0" text="Sélectionner Image" onAction="#chooseImageservice"
                prefHeight="26.0" prefWidth="148.0"/>

        <Label layoutX="327.0" layoutY="203.0" text="Start Date" style="-fx-text-fill: #af7258;"/>

        <Label layoutX="543.0" layoutY="203.0" text="End Date" style="-fx-text-fill: #af7258;"/>
    </children>

    <cursor><Cursor fx:constant="DISAPPEAR"/></cursor>
    <effect><Glow/></effect>

</AnchorPane>
