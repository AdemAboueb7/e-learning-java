<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.elearning.controller.Module.AjouterModuleController">
    <children>
        <VBox spacing="10.0" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Ajouter un module" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TextField fx:id="nomField" promptText="Nom du module"/>
            <TextField fx:id="descriptionfield" promptText="Description du module"/>
            <Label fx:id="errorLabel" text="Erreur: Champ vide !" visible="false" style="-fx-text-fill: red;"/>
            <Button text="Ajouter" onAction="#ajoutermodule"/>
        </VBox>
    </children>
</AnchorPane>
