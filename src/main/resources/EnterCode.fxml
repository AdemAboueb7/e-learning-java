<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.elearning.controller.EnterCode"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@entercode.css">

    <VBox fx:id="formContainer"
          alignment="CENTER"
          spacing="15.0"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <TextField fx:id="codeField" promptText="Enter code"/>
        <PasswordField fx:id="newPasswordField" promptText="Enter new password" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"/>
        <Label fx:id="statusLabel" text=""/>
        <Button text="Submit" onMouseClicked="#handleValidate" prefWidth="200"/>
    </VBox>
</AnchorPane>
