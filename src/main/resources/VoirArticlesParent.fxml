<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane stylesheets="@light-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.elearning.controller.VoirArticlesParentController">
    <left>
        <fx:include source="sidebar.fxml" />
    </left>
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="20" top="20" />
            </padding>
            <TextField fx:id="searchField" promptText="Rechercher un article..." />
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" styleClass="edge-to-edge">
            <FlowPane fx:id="articlesContainer" hgap="10" vgap="10">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="10" />
                </padding>
            </FlowPane>
        </ScrollPane>
    </center>
</BorderPane> 