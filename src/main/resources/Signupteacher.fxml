<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.elearning.controller.signupteacher"
            prefHeight="600.0" prefWidth="600.0"
            stylesheets="@signup.css">
    <children>
        <Hyperlink layoutX="10" layoutY="10" text="← Retour"
                   onAction="#handleBack" />

        <Label layoutX="153.0" layoutY="47.0" text="Nom Complet :" />
        <TextField fx:id="nomclient" layoutX="153.0" layoutY="77.0" prefHeight="26.0" prefWidth="350.0" />

        <Label layoutX="158.0" layoutY="118.0" text="Email :" />
        <TextField fx:id="emailclient" layoutX="153.0" layoutY="147.0" prefHeight="26.0" prefWidth="350.0" />

        <Label layoutX="161.0" layoutY="188.0" text="Mot de passe :" />
        <TextField fx:id="mdpclient" layoutX="153.0" layoutY="211.0" prefHeight="26.0" prefWidth="350.0" />

        <Label layoutX="158.0" layoutY="240.0" text="Numéro de téléphone :" />
        <TextField fx:id="numclient" layoutX="153.0" layoutY="265.0" prefHeight="26.0" prefWidth="350.0" />

        <Label layoutX="158.0" layoutY="300.0" text="Expérience :" />
        <TextField fx:id="experience" layoutX="153.0" layoutY="325.0" prefHeight="26.0" prefWidth="350.0" />

        <Label layoutX="161.0" layoutY="360.0" text="Adresse :" />
        <TextField fx:id="adresseclient" layoutX="153.0" layoutY="385.0" prefHeight="26.0" prefWidth="350.0" />

        <Label layoutX="158.0" layoutY="420.0" text="Matière :" />
        <ComboBox fx:id="matiereComboBox" layoutX="153.0" layoutY="445.0" prefHeight="26.0" prefWidth="350.0" />

        <Button layoutX="195.0" layoutY="490.0" mnemonicParsing="false" onAction="#signup" prefHeight="26.0" prefWidth="256.0" text="Créer compte" textFill="#2797c2" />

        <Hyperlink layoutX="265.0" layoutY="530.0" text="Mot de passe oublié ?" onAction="#handleForgotPassword" />
    </children>
</AnchorPane>
