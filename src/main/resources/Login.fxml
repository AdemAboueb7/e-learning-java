<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.LoginController"
            prefWidth="400.0" prefHeight="300.0">
    <children>
        <VBox alignment="CENTER" spacing="15.0" layoutX="50" layoutY="50">
            <Label text="Connexion" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
            <PasswordField fx:id="passwordField" promptText="Mot de passe" />

            <Button text="Login" onAction="#handleLogin" maxWidth="200" />
        </VBox>
    </children>
</AnchorPane>

