<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="275.0" prefWidth="250.0" spacing="10" style="-fx-background-color: #95dfab;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.elearning.controllers.ModifierQuizzController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px;" text="Modifier Quizz" textFill="#5a057b">
      <font>
         <Font size="20.0" />
      </font></Label>

    <TextField fx:id="matiereField" promptText="Nouvelle Matière" />
    <TextField fx:id="chapitreField" promptText="Nouveau Chapitre" />
    <TextField fx:id="difficulteField" promptText="Nouvelle Difficulté (1-5)" />

    <Label fx:id="infoLabel" textFill="green" />

    <Button onAction="#handleModifier" style="-fx-background-color: #b52ec9;" text="✅ Modifier" textFill="#ebe5ec" />
</VBox>
