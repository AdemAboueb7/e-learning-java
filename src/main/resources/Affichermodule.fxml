            <TableColumn fx:id="nomChapitre" prefWidth="200.0" text="Nom du Chapitre" />
        </columns>
    </TableView>

    <Button fx:id="btnSupprimer" layoutX="248.0" layoutY="219.0" onAction="#supprimer" text="Supprimer" />
